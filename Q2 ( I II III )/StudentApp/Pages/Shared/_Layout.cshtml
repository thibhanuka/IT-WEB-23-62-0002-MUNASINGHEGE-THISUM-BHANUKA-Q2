<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-xl navbar-toggleable navbar-light  mb-3 bg-danger py-3">
            <div class="container-fluid bg-danger">
             
                    
                        <a class="navbar-brand text-white fs-1 ps-1 pe-5 mx-5" asp-area="" asp-page="/Index">StudentApp</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

           

                    <div class="navbar-collapse   collapse d-sm-inline-flex justify-content-between ps-5">
                        <ul class="navbar-nav flex-grow-1 ps-5">
                            <li class="nav-item">
                            <a class="nav-link text-white fs-5 pe-5 ps-5" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white fs-5 ps-5" asp-area="" asp-page="/Students/Index">Add New Student Info</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white fs-5 ps-5" asp-area="" asp-page="/Courses/Index">Add New Course Info</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-white fs-5 ps-5" asp-area="" asp-page="/AllData/AllData">Student Information Page</a>
                            </li>
                        </ul>
                    </div>

              
                              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - StudentApp - IT-WEB-23-62-0002-MUNASINGHEGE THISUM BHANUKA
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>