@page
@model StudentApp.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-danger pt-5 pb-3">Add New Course Info</h1>

<p>
    <a asp-page="Create" class="btn btn-danger mb-5">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].LecturerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LecturerName)
            </td>
            <td>
                    <a asp-page="./Edit" class="link-danger" asp-route-id="@item.CourseId">Edit</a> |
                    <a asp-page="./Details" class="link-danger" asp-route-id="@item.CourseId">Details</a> |
                    <a asp-page="./Delete" class="link-danger" asp-route-id="@item.CourseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
